{
  "name": "@data-fair/metrics",
  "version": "0.9.0",
  "description": "A service to help monitoring HTTP requests in the data-fair stack.",
  "scripts": {
    "test": "node test-it/index.js",
    "lint": "eslint --ext .js,.ts,.vue .",
    "lint-fix": "eslint --fix --ext .js,.ts,.vue .",
    "check-types": "tsc",
    "dev-deps": "docker compose up -d",
    "dev-ui": "cd ui && npm run dev",
    "dev-api": "cd api && npm run dev",
    "dev-daemon": "cd daemon && umask 0 && MONGO_URL=mongodb://localhost:27017/metrics-development SOCKET_PATH=../dev/data/metrics.log.sock MAX_BULK_INTERVAL=2 MAX_BULK_SIZE=10 cargo run",
    "build-types": "df-build-types",
    "prepare": "df-build-types && husky install",
    "act": "act -s GITHUB_TOKEN=$GITHUB_TOKEN"
  },
  "author": "Alban Mouton <alban.mouton@koumoul.com>",
  "license": "AGPL-3.0-only",
  "workspaces": [
    "api",
    "ui",
    "daemon",
    "test-it"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@data-fair/lib": "^0.14.2",
    "axios": "^1.6.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^8.0.3",
    "json-schema-to-typescript": "^11.0.5",
    "typescript": "^5.3.3"
  }
}
